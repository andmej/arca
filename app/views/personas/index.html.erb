  </tr>

<% for persona in @personas %>
  <tr>
    <td><%= h persona.cedula %></td>
    <td><%= h persona.nombres %></td>
    <td><%= h persona.apellidos %></td>
    <td><%= h persona.direccion %></td>
    <td><%= link_to 'Ver', persona %></td>
    <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
    <td><%= link_to 'Eliminar', persona, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
