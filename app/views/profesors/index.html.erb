<h1>Lista de los profesors</h1>

<% form_tag profesors_path, :method => :get do %>
<%= text_field_tag :buscar, params[:buscar] %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>

<table>
  <tr>
    <th>CÃ©dula</th>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Direccion</th>
    <th>Salario</th>
  </tr>

<% for profesor in @profesors %>
  <tr>
    <td><%= h profesor.cedula %></td>
    <td><%= h profesor.nombres %></td>
    <td><%= h profesor.apellidos %></td>
    <td><%= h profesor.direccion %></td>
    <td><%= h profesor.salario %></td>
    <td><%= link_to 'Ver', profesor %></td>
    <td><%= link_to 'Editar', edit_profesor_path(profesor) %></td>
    <td><%= link_to 'Eliminar', profesor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

