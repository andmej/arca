<h1>Lista de los alumnos</h1>
<% form_tag alumnos_path, :method => :get do %>
<%= text_field_tag :buscar, params[:buscar] %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>

<table>
  <tr>
    <th>Exalumno</th>
    <th>Cédula</th>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Direccion</th>
    <th>Cuidados especiales</th>
    <th>Fecha ingreso</th>
    <th>Fecha nacimiento</th>
  </tr>

<% for alumno in @alumnos %>
  <tr>
    <td><%= alumno.exalumno.nil? ? "No" : "Sí" %></td>
    <td><%=h alumno.cedula %></td>
    <td><%=h alumno.nombres %></td>
    <td><%=h alumno.apellidos %></td>
    <td><%=h alumno.direccion %></td>
    <td><%=h alumno.cuidados_especiales %></td>
    <td><%=h alumno.fecha_ingreso %></td>
    <td><%=h alumno.fecha_nacimiento %></td>
    <td><%= link_to 'Ver', alumno %></td>
    <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
    <td><%= link_to 'Eliminar', alumno, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Crear nuevo alumno', new_alumno_path %>
